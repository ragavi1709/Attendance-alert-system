<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center text-primary">Attendance Dashboard</h1>
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Course Name</th>
                    <th>Total Classes</th>
                    <th>Present</th>
                    <th>Absent</th>
                    <th>Attendance %</th>
                </tr>
            </thead>
            <tbody>
                <% courses.forEach(course => { %>
                    <tr>
                        <td><%= course.course_name %></td>
                        <td><%= course.total_classes %></td>
                        <td><%= course.present_classes %></td>
                        <td><%= course.absent_classes %></td>
                        <td><%= ((course.present_classes / course.total_classes) * 100).toFixed(2) %>%</td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
